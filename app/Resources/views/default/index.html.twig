{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tutor Search</h1>
    <p>Search for a tutor by zip code, subject or name.</p>

    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_start(form) }}
        {{ form_row(form.q) }}

        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> Search</button>
    {{ form_end(form) }}

    <form class="form-inline">
        <div class="form-group">
            <input type="text" class="form-control" id="search" name="q" placeholder="Search For Tutor..." />
        </div>
    </form>
{% endblock %}
